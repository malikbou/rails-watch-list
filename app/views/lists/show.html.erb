<h2><%= @list.name %></h2>
<p><%= "Was created at: #{@list.created_at}" %></p>

<div class="d-flex flex-row">
<ul class="list-group">
  <% @list.movies.each do |movie| %>
    <div class="p-2">
    <li class="list-group-item"><%= movie.title %></li>
    <li class="list-group-item"><%= movie.overview %></li>
    <li class="list-group-item"><%= image_tag movie.poster_url %></li>
    </div>
  <% end %>
</ul>
<br>
</div>

<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <ul class="list-group">
          <% @list.movies.each do |movie| %>
            <div class="p-2">
            <li class="list-group-item"><%= movie.title %></li>
            <li class="list-group-item"><%= movie.overview %></li>
            <li class="list-group-item"><%= image_tag movie.poster_url %></li>
            </div>
          <% end %>
        </ul>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Special title treatment</h5>
        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  </div>
</div>


<p><%= link_to "Back to all lists", lists_path %></p>
