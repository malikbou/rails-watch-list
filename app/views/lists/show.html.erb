<h2><%= @list.name %></h2>
<p><%= "Was created at: #{@list.created_at}" %></p>



<div class="d-flex flex-row">
<ul class="list-group">
  <% @list.movies.each do |movie| %>
    <div class="p-2">
    <li class="list-group-item"><%= movie.title %></li>
    <li class="list-group-item"><%= movie.overview %></li>
    <%= cl_image_tag @list.photo.key, height: 800, width: 400, crop: :fill %>
    </div>
  <% end %>
</ul>
<br>
</div>
<p><%= link_to "Back to all lists", lists_path %></p>
